{
  "include": [
    "js/**/*.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "module": "es2020",
    "target": "esnext",
    "baseUrl": "./",
    "rootDir": "js",
    "paths": {
      "*": ["./js/*"]
    },
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "composite": true,
    "isolatedModules": true
  }
}
